<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <title><%- title %></title>
    <!-- Bootstrap CSS -->
    <link rel="canonical" href="https://www.gofindorient.com/thailand-tours/bangkok-phuket-escape.html">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet"href="/css/swiper-bundle.min.css"/>
    <!-- Style CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/menu.css">
    <!-- Favicon -->
    <link href="/images/favicon.png" rel="shortcut icon" type="image/png">
</head>
<style>
.card {
  border: 1px solid var(--primary-dark-color) !important
}
.flex {
  display: flex;
  width: 95%;
}
.day-index {
  color: #fff;
  background-color: var(--primary-dark-color);
  padding: 0 10px;
  border-radius: 12px;
  margin-top: 10px;
  font-weight: bold;
}
.day-content {
    padding: 0 20px
  }
.day-content-destination {
  font-weight: bold;
}
@media (min-width: 320px){
  .welcome-text-mobile {
    display: block
  }
  .welcome-text-mobile h1{
    font-size: 24px;
  }
  .hidden-xs {
    display: none
  }
}
@media (min-width: 640px){
  .welcome-text-mobile {
    display: none
  }
  .hidden-xs {
    display: block
  }
  .day-content {
    display: flex;
    gap: 20px;
  }
}
</style>
<body>
    <header class="header header-style-1 fga_nav-should-fixed clearfix">
        <div class="top-bar bg-white">
            <div class="container">
                <div class="row">
                    <div class="col-md-5">
                        <a href="/">
                            <img id="logo" src="/images/logo.png" alt="logo" width="120" height="138">
                        </a>
                    </div>
                    <div id="gfa__top-info" class="col-md-7">
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- Header Section End -->
    <!-- Top Image Start -->
    <section class="hide-until-md bg-img-top-tour hero-area pt-0">
        <%- bannerImg %>
        <div class="hero-inner hidden-xs">
            <!-- Welcome Text -->
            <div class="welcome-text">
                <h1><%- h1 %></h1>
                <h4><span class="badge badge-light mt-4">Your Reference No.<%- title %></span></h4>
            </div>
            <!--/ End Welcome Text -->
        </div>
    </section>
    <!-- Top Image End -->
    <!-- Start Page Wrapper  -->
    <div class="page-wrapper">
        
        <!-- Itinerary idea in detail Start -->
        <section class="pt-3">
            <div class="container">
                <div class="welcome-text-mobile">
                    <h1><%- h1 %></h1>
                    <h4 class="badge badge-light" style="font-size:16px;padding: .25em 0em .25em .4em;color: #fff;background-color: var(--primary-gray-color)">
                      Your Reference No.
                      <span style="border-radius: .25rem;padding: 0em .4em;color: #fff;background-color: var(--primary-dark-color)"><%- h1 %></span>
                    </h4>
                </div>
                <div class="section-content">
                    <div class="row">
                        <div class="col-md-8">
                            <%- confirmationNumber %>
                            <div class="card mb-4">
                                <div class="card-header text-color-primary p-2">
                                    Contact Information of Travel Consultant:
                                </div>
                                <%- contactInfo %>
                            </div>
                            <div id="t" class="card mb-4">
                                <div class="card-header text-color-primary p-2">
                                    Dates and Transportation upon Arrival / Departure:
                                </div>
                                <%- transportation %>
                            </div>
                            <div class="card mb-4">
                                <div class="card-header text-color-primary p-2">
                                    Group Member Information:
                                </div>
                                <%- groupMember %>
                            </div>
                            <div class="card mb-4">
                                <div class="card-header text-color-primary p-2">
                                    Payment Status:
                                </div>
                                <%- payment %>
                            </div>
                            <div class="card mb-4">
                                <div class="card-header text-color-primary p-2">
                                    Price Includes:
                                </div>
                                <%- priceIncludes %>
                            </div>
                            <div class="card mb-4">
                                <div class="card-header text-color-primary p-2">
                                    Price Excludes:
                                </div>
                                <%- priceExcludes %>
                            </div>
                            <div class="accordion-header d-flex mb-2">
                                <div class="flex-fill h4">
                                    <span class="fa fa-circle text-color-primary " ></span>
                                    <span class="">ITINERARY</span>
                                </div>
                                <div class="flex-fill text-right fs-5">
                                    <a class="mr-4" href="javascript:onOpenAllAccordion();">
                                        <i class="fa fa-plus-circle"></i>
                                        <span>Expand All</span>
                                    </a>
                                    <a   href="javascript:onCloseAllAccordion();">
                                        <i class="fa fa-minus-circle"></i>
                                        <span>Hide All</span>
                                    </a>
                                </div>
                            </div>
                            <%- accordion %>
                            <div class="h4 mb-2">
                                <span class="fa fa-circle text-color-primary " ></span>
                                <span class="">ACCOMMODATION</span>
                            </div>
                            <p>
                                * Click on the hotel name to visit more information and details
                            </p>
                            <%- accommodation %>
                            <div class="card mb-4">
                                <div class="card-header text-color-primary p-2">
                                    Itinerary Modifications:
                                </div>
                                <div class="p-2" style="font-size: 14px;">
                                    <p>
                                        Go Find Orient reserves the right to adjust the tour itinerary if changes in air schedules, surface transportation, or other uncontrollable events necessitate such modifications. In such cases, any increase or decrease in the tour price will be calculated and charged accordingly.
                                    </p>
                                    <p>
                                        If itinerary changes are requested by the client, any additional costs incurred will be the client's responsibility.
                                    </p>
                                </div>
                            </div>
                            <div class="card mb-4">
                                <div class="card-header text-color-primary p-2">
                                    Cancellation Policy:
                                </div>
                                <%- cancellationPolicy %>
                                <strong>Note:</strong><br />
                                <ol style="margin-left:20px">
                                    <li>
                                        If applicable, additional cancellation fees imposed by third-party service providers (including, but not limited to, banks, payment platforms, airlines, cruises, hotels, and railway companies) will be deducted from the refundable amount.
                                    </li>
                                    <li>
                                        Changing the traveler(s) is considered a cancellation and is subject to the policy outlined above.
                                    </li>
                                    <li>
                                        Once the tour has started, we cannot refund any amount for unused services (including, but not limited to, hotels, air or train tickets, meals, and admission fees) due to early departure, late arrival, or missed days on the tour.
                                    </li>
                                    <li>
                                        Special terms may apply in promotions.
                                    </li>
                                </ol>
                            </div>
                            <div class="card mb-4">
                                <div class="card-header text-color-primary p-2">
                                    Acceptance of Terms and Conditions:
                                </div>
                                <div class="p-2" style="font-size: 14px;">
                                    <p>
                                        By submitting your deposit and/or final payment, you and your travel consultant (if applicable) acknowledge that you have read and accepted these Terms and Conditions.
                                    </p>
                                    <p>
                                        Please visit the following link.<br/>
                                        <a href="https://www.gofindorient.com/terms-conditions.html" target="_blank">https://www.gofindorient.com/terms-conditions.html</a>
                                    </p>
                                </div>
                            </div>
                        </div >
                        <div class="col-md-4">
                            <%- sideBar %>
                       </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Itinerary idea in detail End -->
    </div>
    <!-- End Page Wrapper  -->
    <a href="#" class="scrollup"><i class="fa fa-hand-o-up" aria-hidden="true"></i></a>
    <!------------------------------------------
    Main JavaScript
    <------------------------------------------>
    <script src="/js/jquery-3.2.1.min.js"></script>
    <script defer src="/js/bootstrap.min.js"></script>
    <script defer src="/js/jquery.sticky-kit.min.js"></script>
    <script defer src="/js/flatpickr.js"></script>
    <script  src="/js/swiper-bundle.min.js"></script>
    <!-- Optional JavaScript -->
    <script defer src="/js/owl.carousel.min.js"></script>
    <!-- Custom JavaScript -->
    <script defer src="/js/image-loader-min.js"></script>
    <script defer src="/js/utils.js"></script>
    <script defer src="/js/tour-calendar.js"></script>
    <script defer src="/js/script.js"></script>
    <script src="https://www.paypal.com/sdk/js?client-id=AZLS50-ojGxdG2VFpzy4S7HhCrb-rvlHz4AqfsHcySMGgi64v-lpxeHidCKlh6SGfvJNXkv93Pfdtuy1&currency=USD&locale=en_US&commit=false"></script>
    <%- paypalScript %>
</body>
</html>